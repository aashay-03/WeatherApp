<%- include("header") -%>

  <link rel="stylesheet" href="css/proj.css">
</head>

  <style>
    body {
      background-image: url('https://source.unsplash.com/1600x900/?" + <%= city %> + "');
    }
  </style>

<body>
  <div class="box">
    <div class="weather-search">
      <form action="/" method="post">
        <input class="search-bar" type="text" name="cityName" placeholder="Enter City" autocomplete="off">
        <button class="btn" type="submit" name="button"><span class="fas fa-search fa-customize"></span></button>
      </form>
    </div>
    <div class="weather-display">
      <h2 class="city-name">Weather in <%= city %> </h2>
      <h2 class="temp"><%= temperature %> Â°C</h2>
      <div class="condition">
        <img src=<%= add %> alt="icon" class="weather-icon">
        <div class="description"><%= desc %></div>
      </div>
      <div class="humidity">Humidity: <%= humidityp %> %</div>
      <div class="wind">Wind Speed: <%= windspeed %> km/h</div>
    </div>
  </div>
</body>

</html>
